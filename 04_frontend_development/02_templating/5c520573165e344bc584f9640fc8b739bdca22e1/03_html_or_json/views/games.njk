{% extends "layout.njk" %}

{% block content %}

<h1>Games</h1>
<div class = jeux>
    <ul>
        {% for game in games %}
        <li>
            <img src="{{game.cover}}">
            <a href = "/games/{{game.slug}}">{{game.name}}
        </li>
        {% endfor %}
    </ul>
</div>

{% endblock %}